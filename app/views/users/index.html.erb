<div class="row">
  <h1>Listing Users</h1>

  <%= search_form_for @q do |f| %>

  <%= f.label :first_name_cont, "First Name" %>
  <%= f.search_field :first_name_cont %>

  <%= f.label :last_name_cont, "Last Name" %>
  <%= f.search_field :last_name_cont %>

  <%= f.label :role_name_cont, "Role" %>
  <%= f.search_field :role_name_cont %>

  <%= f.submit %>
<% end %>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary pull-right' %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= sort_link(@q, :first_name) %></th>
        <th><%= sort_link(@q, :last_name) %></th>
        <th><%= sort_link(@q, :role_name, "Role") %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.role.try(:name) %></td>
          <td>
            <%= link_to 'Show', user, class: 'btn btn-success btn-mini' %>
            <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-mini' %><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-mini' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate @users %>
